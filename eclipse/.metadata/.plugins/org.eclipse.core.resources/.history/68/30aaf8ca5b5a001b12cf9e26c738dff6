package ru.GraindGreed.MMod;

import net.minecraft.block.material.Material;
import cpw.mods.fml.common.registry.GameRegistry;
import net.minecraft.block.Block;

public class BlockTinOre extends Block {

	public BlockTinOre(Material rock, String name, String texture) {
		super(Material.rock);
		this.setBlockName(name);
		this.setLightLevel(0F);
		this.setLightOpacity(10);
		this.setHardness(4.0F);
		this.setCreativeTab(Main.tabMModIndustry);
		this.setResistance(10);
		this.setHarvestLevel("pickaxe", 1);
		this.setStepSound(soundTypeStone);
		this.setBlockTextureName(Main.MODID + ":" + texture);
		GameRegistry.registerBlock(this, name);
	}
````
}
