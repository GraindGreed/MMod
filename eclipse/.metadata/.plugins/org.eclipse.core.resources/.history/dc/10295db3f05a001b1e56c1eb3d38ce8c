package ru.GraindGreed.MMod;

import java.util.Random;

import net.minecraft.block.Block;
import net.minecraft.init.Blocks;
import net.minecraft.world.World;

public class OreGeneration implements IWorldGeneration {
	
	@Override
	public void generate(Random rand, int chunkX, int chunkZ, World world, IChunkProvided chunkGeneration) {
		
		generateOverworld(rand, chunkX, chunkZ, world);
		
	}
	
	private void generateOverworld(Random rand, int chunkX, int chunkZ, World world) {
		
		generateOverworld(world, rand, chunkX * 16, chunkZ * 16);
		
	}
	
	public void generateOverworld(World world, Random rand, int blockXPos, int blockZPos) {
		
		addOreSpawn(Main.TinOre, Blocks.stone, world, rand, blockXPos, blockZPos,
				16, 16, 1, 10, 1, 5, 10, 5, 150);
		
	}
	
	public static void addOreSpawn(Block ore, Block replase, World world, int blockXPos, int blockZPos,
			int maxX, int maxZ, int minVeinSize, int maxVeinSize, int minVeinsPerChunk, int maxVeinsPerChunk,
			int chanceToSpawn, int minY, int maxY) {
		
		
		
	}

}
